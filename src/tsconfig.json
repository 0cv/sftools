{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "socket.io-client",
      "hammerjs"
    ],
    "paths": {
      "shared": ["client/app/shared"],
      "shared/*": ["client/app/shared/*"],
      "core": ["client/app/core"],
      "core/*": ["client/app/core/*"]
    }
  },
  "exclude": [
    "../node_modules",
    "**/*.e2e.ts",
    "**/*.spec.ts"
  ]
}
